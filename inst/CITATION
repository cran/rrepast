year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "{rrepast}: Running 'Repast Simphony' models inside R environment",
         author = c(person("Antonio", "Prestes Garcia", role = c("aut","cre")),
                    person("Alfonso", "Rodriguez-Paton", role = c("aut","ths"))),
         year = year,
         note = note,
         url = "https://CRAN.R-project.org/package=rrepast")